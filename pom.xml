        <url>git@github.com/transparentech/cujau-nanoxml</url>
        <connection>scm:git:git://github.com/transparentech/cujau-nanoxml.git</connection>
        <developerConnection>scm:git:git@github.com:transparentech/cujau-nanoxml.git</developerConnection>
